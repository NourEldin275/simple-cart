{% extends 'base.html.twig' %}

{% block title %}List Product Categories{% endblock %}

{% block body %}
    <h1>Product Categories</h1>



        {% if product_categories is not empty %}
            <table class="table table-border table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th>Products</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                {% for category in product_categories %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ category.categoryName }}</td>
                        <td>{{ category.description|length > 35 ? category.description|slice(0, 35) ~ '...' :category.description}}</td>
                        <td>{{ category.products|length }}</td>
                        <td>
                            <a href="{{ url('edit_product_category', {'product_category': category.id} ) }}" class="btn btn-warning">Edit</a>
                            <a href="{{ url('delete_product_category', {'product_category': category.id}) }}" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        {% else %}
            <div class="alert alert-info" role="alert">
                No Product Categories Found.
                <a href="{{ url('add_new_category') }}" class="btn btn-primary">Add Now!</a>
            </div>
        {% endif %}


{% endblock %}
